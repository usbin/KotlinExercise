<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chattingTimeStamp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/chattingroomlist_border"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_chattingroom"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#00C62626"
        android:paddingLeft="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button_chattingroom"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#00FFFFFF"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_chattingroom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/timestamp_chattingroom"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_chattingroom"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:text="Seoul"
        app:layout_constraintEnd_toStartOf="@+id/timestamp_chattingroom"
        app:layout_constraintStart_toEndOf="@+id/image_chattingroom"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>